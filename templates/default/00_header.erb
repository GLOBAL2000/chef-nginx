<% if @name == "default" -%>
  listen       80 default_server;
<% else -%>
  listen 80;
<% end -%>
  server_name  <%= @name %> <%= Array( @server_aliases ).join(" ") -%>;

  access_log  /var/log/nginx/<%= @name -%>.access.log combined;
  error_log  /var/log/nginx/<%= @name -%>.error.log;

  # Custom config coming here (sorry, nice intendation gets lost here)
  <%= @config_options -%>
