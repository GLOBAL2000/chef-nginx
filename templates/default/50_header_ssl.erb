<% if @name == "default" -%>
  listen       443 default_server;
<% else -%>
  listen 443;
<% end -%>
  server_name   <%= @name %> <%= Array( @server_aliases ).join(" ") -%>;

  access_log  /var/log/nginx/<%= @name -%>.ssl.access.log combined;
  error_log  /var/log/nginx/<%= @name -%>.ssl.error.log;

  ssl  on;
  ssl_certificate <%= @ssl_cert -%>;
  ssl_certificate_key  <%= @ssl_cert_key -%>;

  # Custom config coming here (sorry, nice intendation gets lost here)
  <%= @config_options -%>
